<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Apptheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="BottomNavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="labelVisibilityMode">selected</item>
        <item name="menu">@menu/bottom_nav_bar</item>
        <item name="itemBackground">@drawable/item_background_selector</item>
        <item name="itemIconTint">@drawable/selector</item>
        <item name="itemTextColor">@drawable/selector</item>
        <item name="android:background">@color/light_grey</item>
    </style>

</resources>