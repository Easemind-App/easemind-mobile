<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".ui.homepage.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:background="@color/yellow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="37dp"
            android:layout_marginRight="37dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/image_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_bold"
                    android:text="@string/name"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plusjakartasans_regular"
                    android:text="@string/homepage_description" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/checkup_button"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/button_square_blue"
            android:text="@string/checkup_button"
            android:textColor="@color/white">
        </androidx.appcompat.widget.AppCompatButton>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_nav_view"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        app:cardCornerRadius="28dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="28dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/plusjakartasans_bold"
                android:text="@string/recap_of_your_feelings"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_tracking"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="40dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/color_gradient_card"
                    android:orientation="horizontal">

                    <!-- Content Layout -->
                    <LinearLayout
                        android:id="@+id/card_view_tracking_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_item_emoji_1"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/draw_overjoyed"
                                android:transitionName="photo"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:textSize="11dp"
                                android:text="06/12/24"
                                android:fontFamily="@font/plusjakartasans_bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_item_emoji_2"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/draw_overjoyed"
                                android:transitionName="photo"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/plusjakartasans_bold"
                                android:textSize="11dp"
                                android:text="06/12/24"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_item_emoji_3"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/draw_overjoyed"
                                android:transitionName="photo"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/plusjakartasans_bold"
                                android:textSize="11dp"
                                android:text="06/12/24" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_item_emoji_4"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/draw_overjoyed"
                                android:transitionName="photo"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date_4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/plusjakartasans_bold"
                                android:textSize="11dp"
                                android:text="06/12/24" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/iv_item_emoji_5"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center"
                                android:src="@drawable/draw_overjoyed"
                                android:transitionName="photo"
                                tools:ignore="ContentDescription" />

                            <TextView
                                android:id="@+id/date_5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginBottom="16dp"
                                android:fontFamily="@font/plusjakartasans_bold"
                                android:textSize="11dp"
                                android:text="06/12/24"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- ProgressBar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="gone" />

                    <!-- No Journal Message -->
                    <TextView
                        android:id="@+id/no_journal_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="Let's Begin Your Journal📝"
                        android:textSize="16sp"
                        android:fontFamily="@font/plusjakartasans_bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:textColor="@color/black"
                android:fontFamily="@font/plusjakartasans_bold"
                android:text="@string/take_care_your_health"
                android:textSize="16sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:id="@+id/daily_journal"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:background="@drawable/color_gradient_card"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_daily_journal"
                        android:layout_width="216dp"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/img_daily_journal" />

                    <LinearLayout
                        android:layout_width="273dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/daily_journal_desription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plusjakartasans_bold"
                            android:text="@string/daily_journal"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/desc_daily_journal_desription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/plusjakartasans_regular"
                            android:text="Keep track of your mood everyday!" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav_view"
        style="@style/BottomNavigationViewStyle"/>

</RelativeLayout>
